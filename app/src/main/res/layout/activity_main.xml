<TableLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"> <!-- Đặt màu nền cho TableLayout -->

    <TableRow>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#4CAF50"
            android:text="Chuyển đổi năm dương lịch"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="18sp"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm dương lịch:" />
        <EditText
            android:id="@+id/editnamduonglich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Nhập năm"
            android:text="2013" /> <!-- Đặt giá trị mặc định là 2013 -->
    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyển đổi"
            android:background="#BDBDBD"/> <!-- Đặt màu nền xám cho nút -->
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm âm lịch:" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quý Tỵ"
            android:background="#FFEB3B"
            android:textColor="#FF0000"
            android:padding="4dp"
            android:textSize="18sp"/>
    </TableRow>

</TableLayout>
